<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="false"
    android:padding="16dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <TextView
                android:id="@+id/text_affected_classes_dialog_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="24dp"
                android:text="s "
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/text_absent_teachers_dialog_entry"
                app:layout_constraintRight_toRightOf="@+id/text_absent_teachers_dialog_entry"
                app:layout_constraintTop_toBottomOf="@+id/text_absent_teachers_dialog_entry" />

            <TextView
                android:id="@+id/label_affected_classes_dialog_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:text="Affected Classes"
                android:textStyle="normal|bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_affected_classes_dialog_entry"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/label_teacher_absent_dialog_entry"
                app:layout_constraintRight_toLeftOf="@+id/guideline" />

            <TextView
                android:id="@+id/label_teacher_absent_dialog_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:text="Absent Teachers"
                android:textAlignment="textStart"
                android:textStyle="normal|bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_absent_teachers_dialog_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"


                android:layout_marginRight="0dp"
                android:text="@android:string/ok"
                app:layout_constraintBaseline_toBaselineOf="@+id/label_teacher_absent_dialog_entry"
                app:layout_constraintLeft_toLeftOf="@+id/guideline"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/text_affected_rooms_dialog_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="22dp"
                android:text="sdfsdfsdf"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/text_affected_classes_dialog_entry"
                app:layout_constraintRight_toRightOf="@+id/text_absent_teachers_dialog_entry"
                app:layout_constraintTop_toBottomOf="@+id/text_affected_classes_dialog_entry" />

            <TextView
                android:id="@+id/label_affected_rooms_dialog_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:text="Affected Rooms"
                android:textAlignment="textStart"
                android:textStyle="normal|bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_affected_rooms_dialog_entry"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/label_teacher_absent_dialog_entry"
                app:layout_constraintRight_toLeftOf="@+id/guideline" />

            <TextView
                android:id="@+id/label_info_dialog_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:text="Info"
                android:textStyle="normal|bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_info_dialog_entry"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/label_teacher_absent_dialog_entry"
                app:layout_constraintRight_toLeftOf="@+id/guideline" />

            <TextView
                android:id="@+id/text_info_dialog_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="24dp"
                android:text="@android:string/ok"
                android:textAlignment="textStart"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/text_absent_teachers_dialog_entry"
                app:layout_constraintRight_toRightOf="@+id/text_absent_teachers_dialog_entry"
                app:layout_constraintTop_toBottomOf="@+id/text_blocked_rooms_dialog_entry"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/label_updated_dialog_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="updated:"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_updated_dialog_entry"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/text_updated_dialog_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/button_close_dialog_entry"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/label_updated_dialog_entry"
                app:layout_constraintRight_toLeftOf="@+id/button_close_dialog_entry"
                app:layout_constraintTop_toTopOf="@+id/button_close_dialog_entry"
                app:layout_constraintVertical_bias="0.466" />

            <Button
                android:id="@+id/button_close_dialog_entry"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:elevation="0dp"
                android:text="@android:string/cancel"
                android:textColor="@color/colorAccent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_info_dialog_entry" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="135dp"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="81dp" />

            <TextView
                android:id="@+id/text_blocked_rooms_dialog_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="24dp"
                android:text="TextView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/text_absent_teachers_dialog_entry"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_affected_rooms_dialog_entry" />

            <TextView
                android:id="@+id/label_blocked_rooms_dialog_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:text="Blocked Rooms"
                android:textStyle="normal|bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_blocked_rooms_dialog_entry"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/label_teacher_absent_dialog_entry"
                app:layout_constraintRight_toLeftOf="@+id/guideline" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
